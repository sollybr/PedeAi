<!DOCTYPE html>
<html lang="en">
<head>
    @RenderSection("Styles", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>PedeAi - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PedeAi.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="layout-wrapper d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid d-flex justify-content-between align-items-center">

                    <a class="navbar-brand" asp-area="" asp-page="/LandingPage">
                        <img src="~/images/pedeai.svg" alt="PedeAi" id="navbar-logo" class="login-logo" />
                    </a>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <form method="post" asp-page="/Logout" class="logout-form">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Sair</button>
                                </form>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Profile">Profile</a>
                            </li>
                        </ul>
                    </div>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="cart-wrapper position-relative me-2">
                            <a class="nav-link" href="#" id="cart-icon" title="Ver Carrinho">
                                <img src="~/images/shopping_cart_24dp_E3E3E3_FILL0_wght400_GRAD0_opsz24.svg"
                                     alt="Carrinho" style="width: 24px; height: 24px; filter: brightness(0) saturate(100%);" />
                            </a>
                            <div class="cart-popup shadow" id="cart-popup">
                                <ul id="cart-popup-items"></ul>
                                <div class="cart-popup-total">Total: <strong id="cart-popup-total">R$0,00</strong></div>
                                <a href="/Carrinho" class="btn btn-sm btn-success w-100 mt-2">Finalizar Pedido</a>
                            </div>
                        </div>
                    }

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
            </nav>
        </header>
        <main role="main" class="flex-grow-1">
            <div class="container">
                @RenderBody()
            </div>
        </main>

        <footer class="border-top footer text-muted">
            <div class="container" style="color: black;">
                &copy; 2025 - PedeAi - <a asp-area="" asp-page="/Privacy">Privacidade</a> |
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <label>Bem vindo(a), @User.Identity.Name!</label>
                }
            </div>
        </footer>

        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
