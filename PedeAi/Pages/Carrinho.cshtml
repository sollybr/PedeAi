@page "/Carrinho"
@model CarrinhoModel
@{
    ViewData["Title"] = "Carrinho";
    Layout = "_Layout";
}

<h1>Seu Carrinho</h1>
<p>Confira os itens adicionados antes de finalizar o pedido.</p>

<div class="carrinho-lista">
    <ul>
        <li>Pão com Ovo - R$5,00 <button class="btn btn-sm btn-danger">Remover</button></li>
        <li>Café com Leite - R$3,50 <button class="btn btn-sm btn-danger">Remover</button></li>
    </ul>
    <div class="carrinho-total">Total: <strong>R$8,50</strong></div>
    <button class="btn btn-primary">Finalizar Pedido</button>
</div>

