@page "/ConclusaoPedido"
@model ConclusaoPedidoModel
@{
    ViewData["Title"] = "Conclusão do Pedido";
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ConclusaoPedido.css" asp-append-version="true" />
}

<h1>Resumo do Pedido</h1>

<div class="resumo-pedido">
    <ul id="pedido-itens"></ul>
    <div class="pedido-total">Total: <strong id="pedido-total">R$0,00</strong></div>

    <form method="post" action="/FinalizarPedido">
        <div class="form-group mt-3">
            <label for="localEntrega">Local de Entrega:</label>
            <select class="form-control" id="localEntrega" name="localEntrega" required>
                <option value="">Selecione um local</option>
                <option value="Bloco A - Sala 101">Bloco A - Sala 101</option>
                <option value="Biblioteca UECE">Biblioteca UECE</option>
                <option value="Cantina Central">Cantina Central</option>
                <option value="Estacionamento Leste">Estacionamento Leste</option>
                <!-- TODO: Substituir por dados do banco -->
            </select>
        </div>

        <input type="hidden" id="cartJson" name="cartJson" />

        <button type="submit" class="btn btn-success mt-3">Confirmar Pedido</button>
    </form>
</div>

<div class="confirmacao-pedido mt-5">
    <p><strong>ID do Pedido:</strong> #12345</p>
    <p><strong>Previsão de entrega:</strong> 15 minutos</p>
    <a asp-page="/MonitorarPedidos" class="btn btn-outline-success">Acompanhar Pedido</a>
</div>

@section Scripts {
    <script>
        const CART_KEY = "pedeai_cart";

        function formatPrice(value) {
            return `R$${value.toFixed(2).replace('.', ',')}`;
        }

        function loadResumoPedido() {
            const cart = JSON.parse(localStorage.getItem(CART_KEY) || '{"items": []}');
            const ul = document.getElementById("pedido-itens");
            const totalElem = document.getElementById("pedido-total");
            const cartInput = document.getElementById("cartJson");

            ul.innerHTML = "";
            let total = 0;

            cart.items.forEach((item) => {
                const li = document.createElement("li");
                const subtotal = item.preco * item.quantidade;
                li.innerHTML = `${item.nome} - ${item.quantidade} x ${formatPrice(item.preco)} = <strong>${formatPrice(subtotal)}</strong>`;
                ul.appendChild(li);
                total += subtotal;
            });

            totalElem.innerHTML = `Total: <strong>${formatPrice(total)}</strong>`;
            cartInput.value = JSON.stringify(cart.items);
        }

        document.addEventListener("DOMContentLoaded", loadResumoPedido);
    </script>
}
